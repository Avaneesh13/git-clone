#!/bin/bash

# Git pre-push hook to ensure code quality before pushing

echo "üîç Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Add common paths where uv might be installed
export PATH="$HOME/.local/bin:$PATH"

# Track if any checks fail
FAILED=0

# Check 1: Pyflakes for code errors
echo ""
echo "üìù Checking for code errors with pyflakes..."
if uv run pyflakes src/ tests/; then
    echo -e "${GREEN}‚úì Pyflakes check passed${NC}"
else
    echo -e "${RED}‚úó Pyflakes found errors${NC}"
    FAILED=1
fi

# Check 2: uv lock file is up to date
echo ""
echo "üîí Checking if uv.lock is up to date..."
if uv lock --check; then
    echo -e "${GREEN}‚úì uv.lock is up to date${NC}"
else
    echo -e "${RED}‚úó uv.lock is out of sync with pyproject.toml${NC}"
    echo -e "${YELLOW}Run: uv lock${NC}"
    FAILED=1
fi

# Check 3: Black formatting
echo ""
echo "üé® Checking code formatting with Black..."
if uv run black --check src/ tests/; then
    echo -e "${GREEN}‚úì Code formatting is correct${NC}"
else
    echo -e "${RED}‚úó Code needs formatting${NC}"
    echo -e "${YELLOW}Run: uv run black src/ tests/${NC}"
    FAILED=1
fi

# Final result
echo ""
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}‚ùå Pre-push checks failed. Please fix the issues above before pushing.${NC}"
    exit 1
else
    echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
    exit 0
fi
